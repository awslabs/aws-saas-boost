@model SaaSBoostHelloWorld.Models.Product
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Product Detail</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container pt-3">
        <div class="row">
            <div class="col-10">
                <h2>Product Detail</h2>
            </div>
        </div>
        @if (!(String.IsNullOrEmpty(ViewData["msg"] as String)))
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-@(ViewData["css"])" alert-dismissible fade show" role="alert">
                        <strong>@ViewData["msg"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-2"><strong>ID</strong></div>
            <div class="col-10">@Model.Id</div>
        </div>
        <div class="row">
            <div class="col-2"><strong>SKU</strong></div>
            <div class="col-10">@Model.Sku</div>
        </div>
        <div class="row">
            <div class="col-2"><strong>Name</strong></div>
            <div class="col-10">@Model.Name</div>
        </div>
        <div class="row">
            <div class="col-2"><strong>Price</strong></div>
            <div class="col-10">@(String.Format("{0:C}", Model.Price))</div>
        </div>
        <div class="row">
            <div class="col-2"><strong>Categories</strong></div>
            <div class="col-10">
                @foreach (var category in Model.Categories)
                {
                    @category.Name<br />
                }
                </div>
        </div>
        <div class="row">
            <div class="col-2"><strong>Image</strong></div>
            <div class="col-10">
                @if (!String.IsNullOrEmpty(Model.ImageName))
                {
                    @Model.ImageName<br />
                    <img src="~/Images/@Uri.EscapeDataString(@Model.GetImagePath())"/>
                }
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
