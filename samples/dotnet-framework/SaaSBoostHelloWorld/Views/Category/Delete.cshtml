@model SaaSBoostHelloWorld.Models.Category
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Delete Category</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container pt-3">
        <h2>Are you sure?</h2>
        @if (!(String.IsNullOrEmpty(ViewData["msg"] as String)))
        {
            <div class="row">
                <div class="col">
                    <div class="alert alert-@(ViewData["css"])" alert-dismissible fade show" role="alert">
                        <strong>@ViewData["msg"]</strong>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                </div>
            </div>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="confirm" required />
                <label class="form-check-label" for="confirm">Check the box to confirm removal of category @Html.Display("Name"). I understand this action cannot be undone.</label>
            </div>
            <div class="form-group row">
                <div class="col">
                    <a role="button" class="btn btn-secondary" href="/category/cancel">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete Category</button>
                </div>
            </div>
        }
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>
